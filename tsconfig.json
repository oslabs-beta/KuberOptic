{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true, 
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": ["es6", "dom", "es2017", "esnext"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src"
  },
  "include": [
    "./src/**/*", "src/Ambient-Types/External Modules/@deck.gl"
  ],
  "exclude": ["node_modules"]
}
